@model IEnumerable<FillingStationApp.Models.DataEntry>

@{
    ViewBag.Title = "Index";
}

<h2>Data Entries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MachineNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentReading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CashRecieved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
