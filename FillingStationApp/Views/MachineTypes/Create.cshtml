@model FillingStationApp.Models.MachineType

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col text-center mt-3">
        <h1>
            Machine Types
        </h1>
    </div>
</div>

<label style="color:red;">@ViewBag.ErrorMessage</label>

<div class="row justify-content-md-center">
    <div class="col-xl-6 col-lg-7 col-md-8 col-sm-9 col-xs-12">
        @using (Html.BeginForm("Create", "MachineTypes", FormMethod.Post, new { @class = "rounded", style = "border:1px solid blue;padding:25px;" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.MType, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.MType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MType, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
