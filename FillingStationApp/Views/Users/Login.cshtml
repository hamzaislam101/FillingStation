@model FillingStationApp.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col text-center mt-3">
        Login
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-8 col-xl-6 col-lg-7 col-sm-11 col-xs-12 p-5">
        @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "rounded veryextralarge verylarge justmedium verysmall veryverysmall" }))
        {
            @Html.AntiForgeryToken()

            <p style="color:red;">@ViewBag.ErrorMessage</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>

        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
